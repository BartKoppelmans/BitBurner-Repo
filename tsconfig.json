{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "util"
    ],
    "compilerOptions": {
        "suppressImplicitAnyIndexErrors": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "/src/*": [
                "src/*"
            ]
        },
        "jsx": "react",
        "jsxFactory": "DOMcreateElement"

    }
}