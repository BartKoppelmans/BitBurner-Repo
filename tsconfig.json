{
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "moduleResolution": "classic",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "ESNext",
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "/src/*": [
                "src/*"
            ]
        }
    }
}