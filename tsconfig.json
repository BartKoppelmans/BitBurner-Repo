{
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}